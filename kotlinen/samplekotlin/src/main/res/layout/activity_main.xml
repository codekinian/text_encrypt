<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="16dp"
    android:paddingEnd="16dp"
    android:paddingStart="16dp"
    android:paddingTop="16dp"
    tools:context=".MainActivity">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_original"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/edit_original"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Original Text"
            android:inputType="textEmailAddress"/>

    </android.support.design.widget.TextInputLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_encrypt_rsa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="encrypt RSA"/>

        <Button
            android:id="@+id/button_encrypt_aes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="encrypt AES"/>

    </LinearLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_encrypted"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/edit_encrypted"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Encrypted Text"
            android:inputType="textEmailAddress"/>

    </android.support.design.widget.TextInputLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_decrypt_rsa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="decrypt RSA"/>

        <Button
            android:id="@+id/button_decrypt_aes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="decrypt AES"/>

    </LinearLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_decrypted"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/edit_decrypted"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Decrypted Text"
            android:inputType="textEmailAddress"/>

    </android.support.design.widget.TextInputLayout>

</LinearLayout>
